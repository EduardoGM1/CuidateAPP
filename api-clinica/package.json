{
  "name": "api-clinica",
  "version": "1.0.0",
  "description": "apli para aplicacion doctor -pacientes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --watch",
    "test:unit": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/unit/",
    "test:integration": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/integration/",
    "test:citas-estados": "node scripts/test-citas-estados-reprogramacion.js",
    "test:citas-estados:auto": "node scripts/verificar-y-ejecutar-pruebas-citas.js",
    "test:endpoints": "node scripts/test-endpoints.js",
    "test:email": "node scripts/test-resend-email.js",
    "test:email:reset": "node scripts/test-email-password-reset.js",
    "test:performance": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/performance/",
    "test:security": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/security/",
    "test:mobile": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/mobile/",
    "test:load": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/performance/load.test.js",
    "test:stress": "set NODE_OPTIONS=--experimental-vm-modules && jest tests/performance/stress.test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:performance && npm run test:security",
    "perf": "node performance/run-tests.js",
    "perf:load": "npx artillery run performance/load-test.yml",
    "perf:stress": "npx artillery run performance/stress-test.yml",
    "perf:spike": "npx artillery run performance/spike-test.yml",
    "perf:auth": "npx artillery run performance/auth-load.yml",
    "perf:hospital": "npx artillery run performance/hospital-workflow.yml",
    "perf:security": "npx artillery run performance/security-load.yml",
    "perf:all": "npm run perf:load && npm run perf:stress && npm run perf:spike",
    "perf:report": "npx artillery run performance/load-test.yml --output performance/reports/load-test-report.json && npx artillery report performance/reports/load-test-report.json",
    "security:advanced": "node performance/run-advanced-security.js",
    "security:data": "npx artillery run performance/data-security-advanced.yml",
    "security:compliance": "npx artillery run performance/compliance-testing.yml",
    "security:encryption": "npx artillery run performance/encryption-testing.yml",
    "audit:security": "node scripts/security/security-audit.js",
    "audit:pentest": "node scripts/security/penetration-test.js",
    "audit:full": "npm run audit:security && npm run audit:pentest",
    "audit:deps": "npm audit && npm audit fix",
    "audit:server": "node scripts/security/server-config-audit.js",
    "audit:database": "node scripts/security/database-security-audit.js",
    "audit:ssl": "node scripts/security/ssl-tls-audit.js",
    "audit:infrastructure": "node scripts/maintenance/infrastructure-audit.js",
    "audit:complete": "npm run audit:infrastructure",
    "security:check-passwords": "node scripts/verificar-y-actualizar-contrasenas-debiles.js",
    "backup:db": "node scripts/database/backup-system.js",
    "reorganize": "node scripts/reorganize-project.js",
    "update-imports": "node scripts/update-imports.js",
    "verify-reorganization": "node scripts/verify-reorganization.js",
    "production:check": "npm run audit:complete && npm run test:all",
    "production:start": "NODE_ENV=production npm start",
    "production:pm2": "pm2 start index.js --name medical-api --instances max",
    "logs:view": "tail -f logs/combined.log",
    "logs:errors": "tail -f logs/error.log",
    "health": "curl http://localhost:3000/health",
    "benchmark": "npm run test:performance && npm run perf:load",
    "benchmark:full": "npm run test:all && npm run perf:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EduardoGM1/api-clinica.git"
  },
  "author": "Eduardo Gonzalez Morelos",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EduardoGM1/api-clinica/issues"
  },
  "homepage": "https://github.com/EduardoGM1/api-clinica#readme",
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "node-cron": "^4.2.1",
    "node-pushnotifications": "^3.1.1",
    "nodemailer": "^7.0.9",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.32.0",
    "resend": "^6.6.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "artillery": "^2.0.21",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
