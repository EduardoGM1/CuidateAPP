<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuración de seguridad de red para cumplir con normas de protección de datos -->
    
    <!-- Configuración base: Permitir HTTP en desarrollo (cleartext traffic) -->
    <!-- IMPORTANTE: Solo en modo debug, en producción debe ser false -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Permitir HTTP para localhost y redes locales -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- IPs locales comunes para desarrollo -->
        <domain includeSubdomains="true">192.168.1.74</domain>
        <domain includeSubdomains="true">192.168.1.65</domain>
        <domain includeSubdomains="true">192.168.1.100</domain>
        <domain includeSubdomains="true">192.168.0.100</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.0.1</domain>
    </domain-config>
    
    <!-- Forzar HTTPS para todas las conexiones de producción -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.tuclinica.com</domain>
        <domain includeSubdomains="true">tuclinica.com</domain>
    </domain-config>
</network-security-config>



